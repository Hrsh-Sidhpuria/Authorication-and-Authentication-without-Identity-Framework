@model Authorization_Authentication.Account.UserManager.UserModel

@{
    ViewData["Title"] = "Delete Account";
    string username = ViewData["Username"]?.ToString() ?? string.Empty;
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-3 mb-5 bg-dark text-light rounded border border-white" style="width: 100%; max-width: 500px;">
        <div class="card-body">
            <h1 class="card-title text-center mb-4" style="font-size: 2rem;">Delete Account</h1>
            <p class="text-center">You are about to permanently delete your account.</p>
            <form action="DeleteAccount" method="post">
                <div class="form-group">
                    <label class="control-label">Username: <strong>@username</strong></label>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" placeholder="Enter your password to confirm" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-danger mt-3 px-5">Delete Account Permanently</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
